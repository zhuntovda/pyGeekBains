
my_list = list()

stop_flag = False
while not stop_flag:
        my_list.append(input("Введите следующее значение списка: "))
        stop_flag = True if input(f"В список введено {len(my_list)} значений, если не хотите вводить больше, напишите 'stop'").upper() == "STOP" else False

print(f"До замены {my_list}")

i = 1
while i < len(my_list):
        my_list[i-1], my_list[i] = my_list[i], my_list[i-1]
        i += 2
        
print(f"После замены {my_list}")